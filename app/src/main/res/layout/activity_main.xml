<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="自定义文本View"
      android:onClick="customTextView"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="自定义ImageTextView"
      android:onClick="customImageTextView"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="自定义ProgressBarView"
      android:onClick="customProgressBar"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="自定义VolumeControl"
      android:onClick="customVolumeControl"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="自定义ViewGroup"
      android:onClick="customImgContainer"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="VDH1"
      android:onClick="vdhActivity1"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="VDH2"
      android:onClick="vdhActivity2"/>


  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="RoundImageDrawableActivity"
      android:onClick="roundBitmap"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="CircleImageDrawableActivity"
      android:onClick="circleBitmap"/>
</LinearLayout>
